<h1><%=link_to @challenger.name, user_path(@challenger)%> vs. <%=link_to @opponent.name, user_path(@opponent)%></h1>
<p>Total Games: <%=@match.game_count%></p>

<table>
    <tr>
        <th>Opponent</th>
        <th>Game Start</th>
        <th>Status</th>
        <th>Action</th>
    </tr>
    <% @games.each do |g|%>
    <tr> 
        <td><%=g.opponent_name%></td>
        <td><%=g.created_at%></td>
        <td><%=g.status%></td>
        <td><%=g.status=="Your Throw" ? link_to("Play Game", game_path(g)) : g.result %></td>
    </tr>
<%end%>
</table>




<%=form_tag match_path(@match), method: "delete" do%>
    <%= submit_tag "Delete this Match"%>
<%end%>