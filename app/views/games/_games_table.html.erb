<table class="table table-bordered">
    <tr>
        <th>Opponent</th>
        <th>Status</th>
        <th>View</th>
        <th>Quick Play</th>
    </tr>
    <% games.each do |g|%>
    <tr> 
        <td><%=g.opponent_name%></td>
        <td><%=g.status%></td>
        <td><%=link_to "v", user_game_path(@user,g), class: "btn btn-warning circle-sm"%></td>
        <%if g.status=="Your Throw"%>
            <td class="circle-group">
                <div>
                    <%=form_for :game, url: game_path(g), method: :patch do |f|%>
                        <%=hidden_field(:game, :chal_throw, {value: "r"})%>
                        <%=f.submit "R", class: "btn btn-primary circle-sm"%>
                    <%end%>
                </div>
                <div>
                    <%=form_for :game, url: game_path(g), method: :patch do |f|%>
                        <%=hidden_field(:game, :chal_throw, {value: "p"})%>
                        <%=f.submit "P", class: "btn btn-primary circle-sm"%>
                    <%end%>
                </div>
                <div>
                    <%=form_for :game, url: game_path(g), method: :patch do |f|%>
                        <%=hidden_field(:game, :chal_throw, {value: "s"})%>
                        <%=f.submit "S", class: "btn btn-primary circle-sm"%>
                    <%end%>
                </div>
            </td>
        <%else%>
            <td></td>
        <%end%>
    </tr>
<%end%>
</table>